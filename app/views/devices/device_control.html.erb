<%tab 'devices'%>
<div id="user-devices">
  <p id="notice"><%= notice %></p>
  <div class="content">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <h4 class="card-title">Devices</h4>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table">
                <thead class=" text-primary">
                  <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Tank</th>
                    <th>Pin</th>
                    <th>Status</th>  
                    <th>Control</th>                  
                    <th><%= link_to(new_user_tank_device_path(@user), class: "btn btn-primary btn-sm", remote: true) do %>
                        <i class="fa fa-plus"></i> Add New
                        <% end %>
                    </th>
                    <th></th>
                  </tr>
                </thead>
                <tbody id="user-devices-table-tbody">
                  <%if @pi_devices%>
                    <%= render partial: 'device_control_row', collection: @devices, as: :device , locals:{pi_devices: @pi_devices}  %>
                  <%else%>
                      <%= render partial: 'device_control_row', collection: @devices, as: :device , locals:{pi_devices: @pi_devices}  %>
                      <div class="alert alert-danger alert-dismissible fade show">
                        <button type="button" aria-hidden="true" class="close" data-dismiss="alert" aria-label="Close">
                          <i class="nc-icon nc-simple-remove"></i>
                        </button>
                        <span>
                          <b> Warning - </b>Could not retreive data from Pi.</span>
                      </div>
                  <%end%>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <br>
</div>

<%= render 'device_modal'%>