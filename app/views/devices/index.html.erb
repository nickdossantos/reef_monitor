<div id="user-devices">
  <p id="notice"><%= notice %></p>
  <div class="content">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <h4 class="card-title">Devices</h4>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table">
                <thead class=" text-primary">
                  <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Identifier</th>
                    <th>Tank</th>
                    <th>Post Url</th>
                    <th><%= link_to(new_user_device_path(@user), class: "btn btn-primary btn-sm", remote: true) do %>
                          <i class="fa fa-plus"></i> Add New
                        <% end %>
                    </th>
                  </tr>
                </thead>
                <tbody id="user-devices-table-tbody">
                  <%= render partial: 'index_row', collection: @devices, as: :device %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <br>
</div>

<%= render 'device_modal'%>