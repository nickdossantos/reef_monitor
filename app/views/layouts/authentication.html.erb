<!DOCTYPE html>
<html>
  <head>
    <title>ReefMonitor</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="<%= asset_url("fish_icon.png") %>">
  </head>

  <body>
      <div class="container">
        <div class="row">
          <div class="col-sm-1">
            <%=image_tag("fish_icon.png", :class=>"logo-image")%>
          </div>
          <div class="col-sm-5">
            <h2 class="logo-text">Reef Monitor</h2>
          </div>
        </div>  
        <%= yield %>
      </div>
      <%= render 'layouts/footer'%>
  </body>
  <%= content_for :render_async %>
</html>
