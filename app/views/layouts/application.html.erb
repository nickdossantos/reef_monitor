<!DOCTYPE html>
<html>
  <head>
    <title>ReefMonitor</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="<%= asset_url("fish_icon.png") %>">
  </head>

  <body>
    <div class="sidebar" data-color="white" data-active-color="danger">
      <div class="logo">
        <a href="/pages/tanks" class="simple-text logo-mini">
          <div class="logo-image-small">
            <%=image_tag("fish_icon.png")%>
          </div>
        </a>
        <a href="/pages/tanks" class="simple-text logo-normal">
          Reef Monitor
        </a>
      </div>
      <div class="sidebar-wrapper">
        <ul class="nav">
          <li class="<%='active' if @page_tab == "tanks"%>">
            <a href="/pages/tanks">
              <i class="nc-icon nc-world-2"></i>
              <p>Tanks</p>
            </a>
          </li>
          <li class="<%='active' if @page_tab == "raspberry_pi"%>">
            <a href="/users/<%=@user.hash_id%>/raspberry_pi">
              <i class="nc-icon nc-globe"></i>
              <p>Raspberry Pi</p>
            </a>
          </li>
          <li class="<%='active' if @page_tab == "user_profile"%>">
            <a href="/users/<%=@user.hash_id%>/edit">
              <i class="nc-icon nc-single-02"></i>
              <p>User Profile</p>
            </a>
          </li>
        </ul>
      </div>
    </div>
    <div class="main-panel">
      <!-- Navbar -->
      <nav class="navbar navbar-expand-lg navbar-absolute fixed-top navbar-transparent">
        <div class="container-fluid">
          <div class="navbar-wrapper">
            <div class="navbar-toggle">
              <button type="button" class="navbar-toggler">
                <span class="navbar-toggler-bar bar1"></span>
                <span class="navbar-toggler-bar bar2"></span>
                <span class="navbar-toggler-bar bar3"></span>
              </button>
            </div>
            <a class="navbar-brand" href="/pages/tanks">Home</a>
          </div>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-bar navbar-kebab"></span>
            <span class="navbar-toggler-bar navbar-kebab"></span>
            <span class="navbar-toggler-bar navbar-kebab"></span>
          </button>
          <div class="collapse navbar-collapse justify-content-end" id="navigation">
            <ul class="navbar-nav">
              <li class="nav-item btn-rotate dropdown">
                <a class="nav-link dropdown-toggle" href="http://example.com" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <i class="nc-icon nc-settings-gear-65"></i>
                  <p>
                    <span class="d-lg-none d-md-block"></span>
                  </p>
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                  <%=link_to "User Profile", edit_user_path(current_user), class: "dropdown-item"%>
                  <%= link_to('Logout', destroy_user_session_path, method: :delete, class:"dropdown-item") %>
                </div>
              </li>
            </ul>
          </div>
        </div>
      </nav>

      <div class="content">
        <%= yield %>
      </div>
      <%= render 'layouts/footer'%>
    </div>

  </body>
  <%= content_for :render_async %>
</html>
