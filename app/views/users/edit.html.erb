<%tab "user_profile"%>

<div class="content">
  <div class="row">
    <div class="col-md-4">
      <div class="card card-user">
        <div class="image">                
        </div>
        <div class="card-body">
          <div class="author">                                               
              <%= image_tag @user.picture.standard.url%>              
              <h5 class="card-title"><%=@user.full_name%></h5>            
          </div>
        </div>
        <div class="card-footer">
          <hr>
          <div class="button-container">
            <div class="row">
              <div class="col-lg-3 col-md-6 col-6 ml-auto">
                <h5><%=@user.tanks.count%>
                  <br>
                  <small>Tanks</small>
                </h5>
              </div>
              <div class="col-lg-4 col-md-6 col-6 ml-auto mr-auto">
                <h5><%=@user.devices.count%>
                  <br>
                  <small>Devices</small>
                </h5>
              </div>
              <div class="col-lg-3 mr-auto">
                <h5><%=@user.sensors.count%>
                  <br>
                  <small>Parameters</small>
                </h5>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <%= form_for(@user, url: user_path(@user.id),html: { :multipart => true }, remote: true) do |form| %>    
        <div class="card card-user">
          <div class="card-header">
            <h5 class="card-title">Edit Profile</h5>
          </div>
          <div class="card-body">
            <form>
              <div class="row">
                <div class="col-md-6 pr-1">
                  <div class="form-group">
                    <%= form.label :first_name, "First Name" %>
                    <%= form.text_field :first_name, id: :user_first_name, class: "form-control" %>
                  </div>
                </div>
                <div class="col-md-6 pr-1">
                  <div class="form-group">
                    <%= form.label :last_name, "Last Name" %>
                    <%= form.text_field :last_name, id: :user_last_name, class: "form-control" %>
                  </div>
                </div>
              </div>

            <div class="form-group">
              <%= form.label :email, "Email"%>                
              <%= form.email_field :email, id: :user_email, class: "form-control" %>  
            </div>
            <div class="form-group">
              <%= form.label :sms_number, "SMS Number"%>                                                 
              <%= form.telephone_field :sms_number, class: 'form-control', 'data-mask': '000-000-0000'%>
            </div>         
            <div class="form-group">
              <%= form.label :time_zone, "Time Zone"%>                
              <%= form.time_zone_select(:time_zone, ActiveSupport::TimeZone.us_zones, {}, {:class => 'form-control'}) %>                            
            </div>   
            
            <div class="form-group">
            <%= form.label :picture, "Picture"%> 
              <div class="custom-file">            
                <%= form.file_field :picture, accept: 'image/png,image/gif,image/jpeg', class:"custom-file-input" %> 
                <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
              </div>
            </div>        
            <div class="row">
              <div class="update ml-auto mr-auto">
                <button type="submit" class="btn btn-primary btn-round">Update Profile</button>
              </div>
            </div>
          </div>
        </div>    
      <%end%>
    </div>
  </div>
</div>