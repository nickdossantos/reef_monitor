<%tab "raspberry_pi"%>

<div class="col-md-12">
    <div class="card card-user">
        <div class="card-header">
            <h5 class="card-title">Raspberry Pi Setup</h5>
        </div>
        <div class="card-body">
            <p id="user_auth_token"><strong>User Auth Token:</strong> <%=@user&.token%></p>
            <p><%=link_to 'Generate New Auth Token', user_generate_auth_token_path(@user), remote: true, data: { confirm: 'Are you sure you want to generate a new Authentication Token?' }, class: "btn btn-sm-primary"%></p>            
        </div>
        <div class="card-body">
            <p id="user_auth_token"><strong>User Pin Token:</strong> <%=@user&.temporary_pin_token%></p>
            <p><%=link_to 'Generate Pin Token: ', user_generate_temporary_pin_token_path(@user), remote: true, data: { confirm: 'Are you sure you want to generate a new Pin Token?' }, class: "btn btn-sm-primary"%></p>            
        </div>
    </div>
</div>